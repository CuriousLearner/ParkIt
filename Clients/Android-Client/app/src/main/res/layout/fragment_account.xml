<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.parkit.parkit_client.ui.AccountFragment">

    
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        >




        <TextView
            android:textSize="25sp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:layout_marginLeft="100dp"
            android:text="@string/label_account_details" />


        <!--<TextView-->
            <!--android:id="@+id/welcome_view"-->
            <!--android:textSize="15sp"-->
            <!--android:layout_marginTop="20dp"-->
            <!--android:layout_marginLeft="55dp"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="" />-->

        <!-- Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear_layout_personal_details"
            android:visibility="visible"
            android:orientation="vertical">
            <!--First Name-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="@string/label_first_name"
                    android:textSize="20sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_first_name"
                    android:text="@string/placeholder"
                    android:layout_marginLeft="7.5dp"
                    android:textSize="20sp"
                    />
            </LinearLayout>
            <!--Last Name-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="@string/label_last_name"
                    android:textSize="20sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_last_name"
                    android:text="@string/placeholder"
                    android:layout_marginLeft="7.5dp"
                    android:textSize="20sp"
                    />
            </LinearLayout>
            <!--Contact Number-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="@string/label_contact_number"
                    android:textSize="20sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_contact_number"
                    android:text="@string/placeholder"
                    android:layout_marginLeft="7.5dp"
                    android:textSize="20sp"
                    />
            </LinearLayout>
            <!--Email ID-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="@string/label_email_id"
                    android:textSize="20sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_email_id"
                    android:text="@string/placeholder"
                    android:layout_marginLeft="7.5dp"
                    android:textSize="20sp"
                    />
            </LinearLayout>
            <!--Address-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="5dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="@string/label_address_multiline"
                    android:textSize="20sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_address"
                    android:text="@string/placeholder"
                    android:textSize="20sp"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="95dp"
                android:text="@string/label_logout" />

        </LinearLayout>


    </LinearLayout>
    
    
    
    
    
</FrameLayout>
