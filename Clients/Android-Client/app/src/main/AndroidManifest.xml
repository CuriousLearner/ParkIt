<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.parkit.parkit_client" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ParkItNavigationDrawer"
            android:theme="@style/ParkItNavigationDrawerTheme" />
        <activity
            android:name=".ui.RegistrationActivity"
            android:label="@string/title_activity_registration" >
        </activity>
        <activity
            android:name=".ui.CustomerDetailsUpdateActivity"
            android:label="@string/title_activity_customer_details_update" >
        </activity>
        <activity
            android:name=".ui.AddVehicleActivity"
            android:theme="@style/ParkItColorTheme"
            android:label="@string/title_activity_add_vehicle" >
        </activity>
    </application>

</manifest>
